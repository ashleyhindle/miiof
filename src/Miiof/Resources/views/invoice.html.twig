<!doctype html>
<html>
		<head>
				<meta charset="utf-8">
				<title>Invoice</title>
				<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
				<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
				<link rel="license" href="http://www.opensource.org/licenses/mit-license/">
		</head>
		<body>
		<div class='container' style='width:1100px;'>
		<h2><strong>INVOICE FROM</strong> {{invoice.from.name}}</h2>
		<div class='row'>
				<div class='col-xs-4'>
						<h3>Details</h3>
						<table class="table table-condensed">
								<tr>
										<th>Invoice #</th>
										<td>{{invoice.invoiceid}}</td>
								</tr>
								<tr>
										<th>Subject</th>
										<td>{{invoice.subject}}</td>
								</tr>
								<tr>
										<th>Date</th>
									    <td>{{invoice.date}}</td>
								</tr>
								<tr class='info'>
										<th>Amount Due</th>
										<td>&pound;{{invoice.total|number_format(2)}}</td>
								</tr>
						</table>
				</div>
				<div class='col-xs-4'>
						<h3>From</h3>
						<table class="table table-condensed">
								<tr>
										<th>Name</th>
										<td>{{invoice.from.name}}</td>
								</tr>
								<tr>
										<th>Phone</th>
										<td>{{invoice.from.phone}}</td>
								</tr>
								<tr>
										<th>Address</th>
									    <td>{{invoice.from.address}}</td>
								</tr>
						</table>
				</div>

				<div class='col-xs-4'>
						<h3>To</h3>
						<table class="table table-condensed">
								<tr>
										<th>Name</th>
										<td>{{invoice.to.name}}</td>
								</tr>
								<tr>
										<th>Phone</th>
										<td>{{invoice.to.phone}}</td>
								</tr>
								<tr>
										<th>Address</th>
									    <td>{{invoice.to.address}}</td>
								</tr>
						</table>
				</div>
		</div>

		<table class="table table-striped table-hover table-condensed">
				<thead>
						<tr>
								<th>Description</th>
								<th>Quantity</th>
								<th>Unit Price</th>
								<th>Subtotal</th>
						</tr>
				</thead>
				<tbody>
								{% for item in invoice.items %}
										<tr>
												<td><span>{{item.description}}</span></td>
												<td><span>{{item.quantity}}</span></td>
												<td><span data-prefix>&pound;</span><span>{{item.price|number_format(2)}}</span></td>
												<td><span data-prefix>&pound;</span><span>{{(item.price * item.quantity)|number_format(2)}}</span></td>
										</tr>
								{% endfor %}
				</tbody>
		</table>
						<table class="table table-condensed">
								<tr class='info'>
										<td><strong><span>Total</span></strong></td>
										<td><strong><span data-prefix>&pound;</span><span>{{invoice.total|number_format(2)}}</span></strong></td>
								</tr>
						</table>
				<div class='aside'>
						<h1><span>Additional Notes</span></h1>
						<div>
								<textarea rows="3" class='form-control' name='notes'>{{invoice.notes}}</textarea>
						</div>
				</div>
		</div>
		</body>
</html>
