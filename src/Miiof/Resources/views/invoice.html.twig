<!doctype html>
<html>
		<head>
				<meta charset="utf-8">
				<title>Invoice</title>
				<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
				<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
				<link rel="license" href="http://www.opensource.org/licenses/mit-license/">
		</head>
		<body>
		<div class='container' style='width:1100px;'>
		<h3><strong>INVOICE FROM</strong> {{invoice.from.name}} - <small>{{invoice.from.address}}</small></h3>
		<div class='row'>
				<div class='col-xs-4'>
						<h3>Details</h3>
						<table class="table table-condensed">
								<tr>
										<th>Invoice #</th>
										<td>{{invoice.invoiceid}}</td>
								</tr>
								<tr>
										<th>Issue Date</th>
									    <td>{{invoice.date}}</td>
								</tr>
								<tr>
										<th>Subject</th>
										<td>{{invoice.subject}}</td>
								</tr>
						</table>
				</div>

				<div class='col-xs-8'>
						<h3><strong>INVOICE FOR</strong> {{invoice.to.name}}</h3>
						<table class="table table-condensed">
								<tr>
										<th>Address</th>
									    <td>{{invoice.to.address}}</td>
								</tr>
								<tr>
										<th>Phone</th>
										<td>{{invoice.to.phone}}</td>
								</tr>
						</table>
				</div>
		</div>

		<table class="table table-striped table-hover table-condensed" style='margin-top: 10px;'>
				<thead>
						<tr>
								<th>Description</th>
								<th>Quantity</th>
								<th>Unit Price</th>
								<th>Subtotal</th>
						</tr>
				</thead>
				<tbody>
								{% for item in invoice.items %}
										<tr>
												<td><span>{{item.description}}</span></td>
												<td><span>{{item.quantity}}</span></td>
												<td><span data-prefix>&pound;</span><span>{{item.price|number_format(2)}}</span></td>
												<td><strong><span data-prefix>&pound;</span><span>{{(item.price * item.quantity)|number_format(2)}}</span></strong></td>
										</tr>
								{% endfor %}
				</tbody>
		</table>
						<table class="table table-condensed">
								<tr class='info'>
										<td><strong><span>Amount Due</span></strong></td>
										<td><strong><span data-prefix>&pound;</span><span>{{invoice.total|number_format(2)}}</span></strong></td>
								</tr>
						</table>
				<div class='aside'>
						<h4><span>Additional Notes</span></h4>
						<div>
								<blockquote name='notes'>{{invoice.notes}}</blockquote>
						</div>
				</div>
		</div>
		</body>
</html>
